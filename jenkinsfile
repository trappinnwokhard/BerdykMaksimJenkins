pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'pip install unittest-xml-reporting'
            }
        }

        stage('Run Tests') {
            steps {
                bat '''
                    set PYTHONIOENCODING=utf-8
                    python test_library.py
                '''
            }
        }
    }

    post {
        always {
            junit 'test-reports/*.xml'
        }
        success {
            echo 'Всі тести пройшли успішно!'
        }
        failure {
            echo 'Є помилки в тестах.'
        }
    }
}