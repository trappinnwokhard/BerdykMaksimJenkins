pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = 'trappinwok2hard' 
        APP_NAME = 'library-app'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies & Test') {
            steps {
                bat 'python -m pip install unittest-xml-reporting'
                bat '''
                    set PYTHONIOENCODING=utf-8
                    python test_library.py
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker Image...'
                    bat "docker build -t %DOCKER_REGISTRY%/%APP_NAME%:%IMAGE_TAG% -t %DOCKER_REGISTRY%/%APP_NAME%:latest ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                        bat '''
                            @echo off
                            echo Logging in to Docker Hub...
                            echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                            
                            echo Pushing image...
                            docker push %DOCKER_REGISTRY%/%APP_NAME%:%IMAGE_TAG%
                            docker push %DOCKER_REGISTRY%/%APP_NAME%:latest
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            junit 'test-reports/*.xml'
        }
        success {
            echo 'Pipeline successfully finished! Image pushed to Docker Hub.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}